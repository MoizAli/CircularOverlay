<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomOverlayTheme" parent="OverLayView.Light">
        <item name="backgroundColor">#D9000000</item>
        <item name="buttonText">@string/okay_got_it</item>
        <item name="titleTextAppearance">@style/CustomTitle</item>
        <item name="detailTextAppearance">@style/DetailText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.OverlayView.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/overlay_text_title_size</item>
    </style>

    <style name="DetailText" parent="TextAppearance.OverlayView.Detail.Light">
        <item name="android:textColor">#11bee3</item>
        <item name="android:textSize">@dimen/overlay_text_detail_size</item>
    </style>

</resources>
